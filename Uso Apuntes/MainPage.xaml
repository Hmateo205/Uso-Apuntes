<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uso_Apuntes.MainPage"
             BackgroundColor="DarkOliveGreen">
    

    <ScrollView>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">

            <!-- Texto de bienvenida -->
        <Label Text="¡Bienvenido a mi aplicación .NET MAUI!"
            FontSize="24"
            HorizontalOptions="Center" />

            <!-- Texto adicional -->
        <Label Text="Esta aplicación es de Apuntes"
            FontSize="20"
            HorizontalOptions="Center" />
         
        <Image
            Source="dotnet_bot.png"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a race car number eight" />

        </StackLayout>

    </ScrollView>

</ContentPage>
